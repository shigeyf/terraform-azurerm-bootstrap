{
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "commitizen": "^4.3.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0"
  },
  "scripts": {
    "prepare": "husky",
    "commit": "git-cz",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:lint-staged": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
